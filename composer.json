{
  "name": "vdhicts/uri-builder",
  "description": "Easily parse, build or manipulate an URI.",
  "keywords": [
    "uri",
    "builder"
  ],
  "homepage": "https://github.com/vdhicts/uri-builder",
  "license": "MIT",
  "authors": [
    {
      "name": "Dick van der Heiden",
      "email": "dick@goedemiddag.nl",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^8.3",
    "cyberfusion/domain-parser": "^1.6",
    "vdhicts/http-query-builder": "^1.0|^2.0"
  },
  "require-dev": {
    "laravel/pint": "^1.22",
    "phpstan/phpstan": "^2.1",
    "phpunit/phpunit": "^11.0"
  },
  "autoload": {
    "psr-4": {
      "Vdhicts\\UriBuilder\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Vdhicts\\UriBuilder\\Tests\\": "tests"
    }
  },
  "scripts": {
    "analyse": "vendor/bin/phpstan analyse",
    "code-style:check": "vendor/bin/pint --test",
    "code-style:fix": "vendor/bin/pint",
    "test": "vendor/bin/phpunit",
    "test:no-coverage": "vendor/bin/phpunit --no-coverage"
  },
  "config": {
    "sort-packages": true
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
